{
  "default": {
    "paths": ["test/**/*.feature"],
    "requireModule": ["ts-node/register"],
    "baseURL": "https://yoigo.com",
    "require": ["test/**/*.ts"],
    "reports": "test/reports",
    "browser": "chrome",
    "tags": "not @ignore",
    "reportHTML": true,
    "timeout": 30000,
    "debug": false
  },
  "ci": {
    "paths": ["test/**/*.feature"],
    "requireModule": ["ts-node/register"],
    "baseURL": "https://yoigo.com",
    "require": ["test/**/*.ts"],
    "reports": "test/reports",
    "browser": "chrome:headless",
    "tags": "not @ignore",
    "reportHTML": true,
    "parallel": 2,
    "retry": 1
  }
}
